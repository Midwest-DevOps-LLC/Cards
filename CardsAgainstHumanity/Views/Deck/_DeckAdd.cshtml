@model IEnumerable<DataEntities.Deck>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="@("r" + item.DeckID)" class="cardRow">
                    <td class="cardText">
                        @Html.Raw(item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        <input type="button" class="btn btn-success" value="Add" onclick='AddCard(@item.DeckID, "@item.Name.Replace("\"", "'")", this)' />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <form class="col-12">
                <p>No decks were found :(</p>
            </form>
        </div>
    </div>
}
